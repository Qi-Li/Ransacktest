<h1>Listing product1s</h1>

<%= search_form_for @search do |f|%>
<div class = "field">
	<%= f.label :name_cont, "Name Contains"%>
	<%= f.text_field :name_cont%>
</div>

<div class = "field">
	<%= f.label :location_cont, "Location Contians"%>
	<%= f.text_field :location_cont%>
</div>

<div class ="field">
	<%= f.label :description_cont, "Description Contains"%>
	<%= f.text_field :description_cont%>
</div>


	
<div class = "actions">
	<%= f.submit "Search"%>
</div>
<%end%>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product1s.sort_by(&:created_at).reverse.each do |product1|  %>
      <tr>
        <td><%= product1.name %></td>
        <td><%= product1.location %></td>
        <td><%= product1.description %></td>
        <td><%= link_to 'Show', product1 %></td>
        <td><%= link_to 'Edit', edit_product1_path(product1) %></td>
        <td><%= link_to 'Destroy', product1, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product1', new_product1_path %>
